{
  "family": "otboo",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::356206422747:role/ecsTaskExecutionRole-otboo",
  "taskRoleArn": "arn:aws:iam::356206422747:role/ecsTaskRole-otboo",
  "containerDefinitions": [
    {
      "name": "otboo",
      "image": "REPLACED_BY_ACTIONS",
      "portMappings": [{ "containerPort": 8080 }],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/otboo",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        { "name": "SPRING_PROFILES_ACTIVE", "value": "prod" },
        { "name": "STORAGE_TYPE", "value": "s3" },

        { "name": "OPENAI_MODEL", "value": "gpt-4o-mini" },
        { "name": "OPENAI_TEMPERATURE", "value": "0.2" },
        { "name": "OPENAI_MAX_TOKENS", "value": "600" },

        { "name": "KAKAO_MAP_URL", "value": "https://dapi.kakao.com/v2/local/geo/coord2regioncode.json" },
        { "name": "KAKAO_MAP_CONNECT_TIMEOUT", "value": "3000" },
        { "name": "KAKAO_MAP_READ_TIMEOUT", "value": "5000" },

        { "name": "WEATHER_URL", "value": "https://apis.data.go.kr/1360000/VilageFcstInfoService_2.0/getVilageFcst" },
        { "name": "WEATHER_CONNECT_TIMEOUT", "value": "3000" },
        { "name": "WEATHER_READ_TIMEOUT", "value": "5000" },

        { "name": "ADMIN_USERNAME", "value": "zeroad" },
        { "name": "ADMIN_EMAIL", "value": "yryun00@gmail.com" },

        { "name": "STORAGE_LOCAL_ROOT_PATH", "value": "uploads" },

        { "name": "KAFKA_ENABLED", "value": "false" },
        { "name": "SPRING_KAFKA_LISTENER_AUTO_STARTUP", "value": "false" },
        { "name": "SPRING_CACHE_TYPE", "value": "none" }
      ],
      "secrets": [

        { "name": "DB_HOST",     "valueFrom": "arn:aws:ssm:ap-northeast-2:356206422747:parameter/otboo/DB/HOST" },
        { "name": "DB_PORT",     "valueFrom": "arn:aws:ssm:ap-northeast-2:356206422747:parameter/otboo/DB/PORT" },
        { "name": "DB_NAME",     "valueFrom": "arn:aws:ssm:ap-northeast-2:356206422747:parameter/otboo/DB/NAME" },
        { "name": "DB_USERNAME", "valueFrom": "arn:aws:ssm:ap-northeast-2:356206422747:parameter/otboo/DB/USERNAME" },
        { "name": "DB_PASSWORD", "valueFrom": "arn:aws:ssm:ap-northeast-2:356206422747:parameter/otboo/DB/PASSWORD" },


        { "name": "REDIS_HOST", "valueFrom": "arn:aws:ssm:ap-northeast-2:356206422747:parameter/otboo/REDIS/HOST" },
        { "name": "REDIS_PORT", "valueFrom": "arn:aws:ssm:ap-northeast-2:356206422747:parameter/otboo/REDIS/PORT" },


        { "name": "OPENAI_API_KEY", "valueFrom": "arn:aws:ssm:ap-northeast-2:356206422747:parameter/otboo/OPENAI_API_KEY" },


        { "name": "SECURITY_JWT_KEY", "valueFrom": "arn:aws:ssm:ap-northeast-2:356206422747:parameter/otboo/SECURITY_JWT_KEY" },
        { "name": "ADMIN_PASSWORD",   "valueFrom": "arn:aws:ssm:ap-northeast-2:356206422747:parameter/otboo/ADMIN_PASSWORD" },


        { "name": "PASSWORD_SEND", "valueFrom": "arn:aws:ssm:ap-northeast-2:356206422747:parameter/otboo/PASSWORD_SEND" }

        ,{ "name": "AWS_S3_ACCESS_KEY", "valueFrom": "arn:aws:ssm:ap-northeast-2:356206422747:parameter/otboo/AWS/S3/ACCESSKEY" }
        ,{ "name": "AWS_S3_SECRET_KEY", "valueFrom": "arn:aws:ssm:ap-northeast-2:356206422747:parameter/otboo/AWS/S3/SECRETKEY" },

        { "name": "AWS_S3_BUCKET", "value": "obtoo-uploads" },
        { "name": "AWS_S3_BUCKET_URL", "value": "https://obtoo-uploads.s3.ap-northeast-2.amazonaws.com" },
        { "name": "AWS_S3_PRESIGNED_URL_EXPIRATION", "value": "600" }
      ]
    }
  ]
}
